{
  "extends": "eslint:recommended",
  "parserOptions": { "ecmaVersion": 6 },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": ["error", 3, { "SwitchCase": 1 }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  }
}
